<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/go_back"
            android:background="@color/white"
            android:src="@drawable/ic_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Identitas Diri"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:textColor="@color/black" />

    </Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Masukan Nomor Telepon"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/nomor_telepon_update"
            android:layout_width="346dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_edittext"
            android:hint="Contoh: 08 xxx xxx xxxx"
            android:textColor="@color/grey_dark"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Referensi"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/referensi"
            android:layout_width="346dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_edittext"
            android:hint="Contoh: Instagram, Brosur, Agen"
            android:textColor="@color/grey_dark"
            android:textSize="13dp" />

        <Button
            android:id="@+id/update_identitas"
            android:layout_width="345dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button_submit"
            android:text="Simpan"
            android:textColor="@color/black"
            android:textSize="13dp" />


    </LinearLayout>

    <include
        layout="@layout/bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

</RelativeLayout>