<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_appbar_gallery"
    android:elevation="5dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/promo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo_ventour"/>


        <TextView
            android:id="@+id/tag"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cutsom_tag"
            android:text="@string/haji"
            android:textAlignment="center"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/judul_paket"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Umroh 9 Agustus 2022"/>

            <TextView
                android:id="@+id/waktu_keberangkatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calender"
                android:text="Berangkat 19 Maret 2022"/>

            <TextView
                android:id="@+id/waktu_program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_clock"
                android:text="@string/hari9"/>

            <TextView
                android:id="@+id/sisah_kursi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:drawableLeft="@drawable/ic_person"
                android:text="Tersisa 2 dari 40 kursi"/>

            <TextView
                android:id="@+id/harga"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@drawable/custom_navbar_layanan"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Rp. 30 Juta"/>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.cardview.widget.CardView>