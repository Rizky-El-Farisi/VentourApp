<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".artikel.ArtikelDetail">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="10dp"
            android:background="@drawable/custom_toolbar">

            <ImageButton
                android:id="@+id/go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_arrow_back"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/logo_toolbar"/>

            <ImageButton
                android:id="@+id/bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_bookmark"/>

        </Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/smpl_artikel"
                    android:src="@drawable/logo_ventour"
                    android:layout_width="380dp"
                    android:layout_height="358dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="100dp" />

                <TextView
                    android:id="@+id/judul_artikel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="5 keistimewaan berumroh"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/isi_artikel"
                    android:layout_width="wrap_content"
                    android:layout_height="114dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Ventour memberikan pelayanan umroh bintang 5, Dengan destinasi utamanya yakni Mekah di Masjidil Haram dan Madinah di Masjid Nabawi Raudah."
                    android:textColor="@color/black" />
            </LinearLayout>

        </ScrollView>

            <include
                layout="@layout/bottom_navigation"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>