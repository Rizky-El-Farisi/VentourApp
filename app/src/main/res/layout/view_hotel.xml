<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/card_hotel"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    android:background="@drawable/custom_appbar_gallery"
    android:layout_gravity="center">

        <ImageView
            android:id="@+id/foto_hotel"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo_ventour"/>

        <TextView
            android:id="@+id/nama_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="160dp"
            android:text="Elaf Masher"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lokasi_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="10dp"
            android:text="Makkah"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="10dp"
            android:text="Check in"/>
        <TextView
            android:id="@+id/tgl_checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="15 juni"/>

        <ImageView
            android:id="@+id/map_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_location"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:text="Check out"/>
        <TextView
            android:id="@+id/tgl_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:text="15 juni"/>


</androidx.cardview.widget.CardView>